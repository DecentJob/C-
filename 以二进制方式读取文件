#include<fstream>
class Person
{
public:
	char m_Name[64];
	int m_Age;

};


//二进制文件 读文件
void test01()
{
	//1.创建流对象
	ifstream ifs;
	//2.打开文件
	ifs.open("person.txt", ios::in | ios::binary);

	if (!ifs.is_open())
	{
		cout << "文件打开失败" << endl;
		return;

	}

	//3.读文件
	Person p;

	ifs.read((char*)&p, sizeof(Person));
	cout << "姓名" << p.m_Name << "年龄" << p.m_Age << endl;

		//4.关闭文件

		ifs.close();

}
