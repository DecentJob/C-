#include<iostream>


class Animal{

pubilc:
//虚函数
virtual void speak()
{
cout<<"动物在说话"<<endl;
}
};

//猫类

class Cat : pubilc Animal
{
pubilc:

virtual void speak()
{

virtual void speak()
{
cout<<"小猫在说话"<<endl;
}
};

void doSpeak(Animal &animal)
{
animal.speak();
}
}

void test01()
{

Cat cat;
doSpeak(cat);

}


int main()
{

test01();
return 0;
}
